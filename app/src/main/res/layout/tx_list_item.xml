<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/watch_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="16dp"
    cardview:cardElevation="4dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true">

        <com.breadwallet.presenter.customviews.BRText
            android:id="@+id/sent_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:text="Sent"
            android:textColor="@color/almost_black"
            app:customFont="CircularPro-Book.otf" />

        <com.breadwallet.presenter.customviews.BRText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignBottom="@+id/sent_received"
            android:layout_toRightOf="@+id/sent_received"
            android:text="$25"
            android:textColor="@color/almost_black"
            app:customFont="CircularPro-Bold.otf" />

        <com.breadwallet.presenter.customviews.BRText
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignBottom="@+id/sent_received"
            android:layout_alignParentEnd="true"
            android:text="2d"
            android:textColor="@color/light_gray"
            app:customFont="CircularPro-Medium.otf" />

        <com.breadwallet.presenter.customviews.BRText
            android:id="@+id/to_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/sent_received"
            android:layout_alignLeft="@+id/sent_received"
            android:text="to"
            android:textColor="@color/almost_black"
            app:customFont="CircularPro-Book.otf"/>

        <com.breadwallet.presenter.customviews.BRText
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/to_from"
            android:layout_alignTop="@+id/to_from"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="account"
            android:textColor="@color/almost_black"
            app:customFont="CircularPro-Bold.otf" />

        <com.breadwallet.presenter.customviews.BRText
            android:id="@+id/confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/sent_received"
            android:text="Completed"
            android:textColor="@color/almost_black"
            app:customFont="CircularPro-Book.otf"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>